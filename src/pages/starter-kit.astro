<style>
  .page-hero {
    background: radial-gradient(ellipse 80% 60% at 50% -10%, rgba(255,107,53,0.12) 0%, transparent 70%);
    border-bottom: 1px solid var(--border);
    padding: 5rem 0 4rem;
    text-align: center;
  }
  .page-hero .badge { margin-bottom: 1rem; }
  .page-hero h1 { margin-bottom: 1.25rem; }
  .page-subtitle { font-size: 1.1rem; max-width: 600px; margin: 0 auto 1.5rem; line-height: 1.7; }
  .lang-notice a { font-size: 0.9rem; color: var(--accent); font-weight: 600; }

  .page-content { padding: 2rem 0 5rem; }

  .section-inner { padding: 4rem 0; }
  .section-header { text-align: center; margin-bottom: 3rem; }
  .section-header .badge { margin-bottom: 1rem; }
  .section-header h2 { margin-bottom: 0.75rem; }
  .section-header p { font-size: 1.05rem; max-width: 600px; margin: 0 auto; }

  /* Kit Contents */
  .kit-contents { display: flex; flex-direction: column; gap: 1.5rem; max-width: 800px; margin: 0 auto; }
  .kit-item { display: flex; gap: 1.5rem; align-items: flex-start; background: var(--bg2); border: 1px solid var(--border); border-radius: var(--radius-lg); padding: 1.75rem; transition: border-color 0.2s; }
  .kit-item:hover { border-color: var(--accent); }
  .kit-icon { font-size: 2.5rem; flex-shrink: 0; }
  .kit-text h3 { margin-bottom: 0.5rem; font-size: 1.1rem; }
  .kit-text p { font-size: 0.92rem; line-height: 1.7; margin: 0; }

  /* Price Banner */
  .price-banner {
    background: linear-gradient(135deg, rgba(255,107,53,0.1), rgba(0,212,255,0.08));
    border-top: 1px solid rgba(255,107,53,0.25);
    border-bottom: 1px solid rgba(255,107,53,0.25);
    padding: 4rem 0;
  }
  .price-content { max-width: var(--max-width); margin: 0 auto; padding: 0 1.5rem; display: grid; grid-template-columns: auto 1fr auto; gap: 3rem; align-items: center; }
  .price-tag { font-size: 4rem; font-weight: 900; color: var(--accent); line-height: 1; }
  .price-note { font-size: 0.85rem; color: var(--text2); margin-top: 0.25rem; }
  .price-center h3 { margin-bottom: 0.5rem; font-size: 1.3rem; }
  .price-center p { font-size: 0.9rem; line-height: 1.7; }
  .waitlist-info { background: var(--bg2); border: 1px solid var(--border); border-radius: var(--radius-lg); padding: 1.5rem; text-align: center; max-width: 300px; }
  .waitlist-icon { font-size: 2rem; margin-bottom: 0.75rem; }
  .waitlist-info p { font-size: 0.85rem; line-height: 1.6; margin-bottom: 1.25rem; }

  /* Audience */
  .audience-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem; max-width: 800px; margin: 0 auto; }
  .audience-card { background: var(--bg2); border: 1px solid var(--border); border-radius: var(--radius-lg); padding: 1.75rem; }
  .audience-card.yes { border-left: 3px solid #4ade80; }
  .audience-card.no { border-left: 3px solid #f87171; }
  .a-icon { font-size: 1.5rem; margin-bottom: 0.5rem; }
  .audience-card h3 { margin-bottom: 0.5rem; font-size: 1rem; }
  .audience-card p { font-size: 0.88rem; line-height: 1.7; margin: 0; }

  /* FAQ */
  .faq-section { background: var(--bg2); border-radius: var(--radius-lg); padding: 3rem 2rem; }
  .faq-list { max-width: 600px; margin: 0 auto; }

  @media (max-width: 900px) {
    .price-content { grid-template-columns: 1fr; text-align: center; }
    .waitlist-info { margin: 0 auto; }
    .audience-grid { grid-template-columns: 1fr; }
  }
  @media (max-width: 600px) {
    .kit-item { flex-direction: column; }
  }
</style>
