  .info-icon { font-size: 1.1rem; flex-shrink: 0; margin-top: 0.1rem; }
  .tip-box { background: rgba(255,107,53,0.05); border: 1px solid rgba(255,107,53,0.2); color: var(--text2); }
  .code-hint { font-size: 0.8rem; color: var(--accent2); font-weight: 600; margin-bottom: 0.4rem; }
  .terminal-open-hint { background: rgba(0,212,255,0.05); border: 1px solid rgba(0,212,255,0.2); border-radius: var(--radius); padding: 0.875rem 1.25rem; margin-bottom: 1.5rem; font-size: 0.9rem; color: var(--text2); line-height: 1.6; }

  .concept-cards { display: grid; grid-template-columns: 1fr 1fr; gap: 1.25rem; margin: 1.5rem 0; }
  .concept-card {
    background: var(--bg2); border: 1px solid var(--border);
    border-radius: var(--radius-lg); padding: 1.5rem;
    transition: border-color 0.2s;
  }
  .concept-card.featured { border-color: var(--accent); }
  .concept-icon { font-size: 2rem; margin-bottom: 0.75rem; }
  .concept-card h3 { margin-bottom: 0.5rem; font-size: 1rem; }
  .concept-card p { font-size: 0.9rem; margin: 0; }

  .code-label {
    font-family: var(--mono);
    font-size: 0.8rem;
    color: var(--text2);
    background: var(--bg3);
    border: 1px solid var(--border);
    border-bottom: none;
    padding: 0.5rem 1rem;
    border-radius: var(--radius) var(--radius) 0 0;
    margin-top: 1rem;
  }
