</Layout>

<style>
  .page-hero {
    background: linear-gradient(180deg, rgba(255,107,53,0.08) 0%, transparent 100%);
    border-bottom: 1px solid var(--border);
    padding: 4rem 0 3rem;
  }
  .page-hero .badge { margin-bottom: 1rem; }
  .page-hero h1 { margin-bottom: 1rem; }
  .page-subtitle { font-size: 1.1rem; max-width: 600px; line-height: 1.7; margin-bottom: 1rem; }
  .lang-notice { margin-top: 1rem; }
  .lang-notice a { font-size: 0.9rem; color: var(--accent); font-weight: 600; }

  .platform-chooser { padding: 4rem 0 5rem; }

  .chooser-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 4rem;
  }

  .platform-card {
    display: flex;
    flex-direction: column;
    background: var(--bg2);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 2.5rem 2rem;
    text-decoration: none;
    color: var(--text);
    position: relative;
    transition: all 0.2s;
  }
  .platform-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(255,107,53,0.15);
    opacity: 1;
  }
  .platform-card.recommended { border-color: var(--accent); }

  .platform-badge {
    position: absolute;
    top: -0.75rem;
    left: 1.5rem;
    background: var(--accent);
    color: white;
    font-size: 0.7rem;
    font-weight: 700;
    padding: 0.2rem 0.75rem;
    border-radius: 999px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .platform-icon {
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }

  .platform-card h2 {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }

  .platform-version {
    font-size: 0.8rem;
    color: var(--accent2);
    font-weight: 600;
    margin-bottom: 1rem;
    font-family: var(--mono);
  }

  .platform-card p {
    font-size: 0.93rem;
    line-height: 1.7;
    margin-bottom: 1.25rem;
  }

  .platform-card ul {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
    flex: 1;
  }
  .platform-card ul li {
    padding: 0.3rem 0 0.3rem 1.5rem;
    position: relative;
    color: var(--text2);
    font-size: 0.88rem;
  }
  .platform-card ul li::before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: #4ade80;
    font-weight: 700;
  }

  .platform-cta {
    font-weight: 700;
    color: var(--accent);
    font-size: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: auto;
  }
  .arrow { transition: transform 0.2s; }
  .platform-card:hover .arrow { transform: translateX(4px); }

  /* Comparison */
  .comparison-table { margin-top: 1rem; }
  .comparison-table h3 { font-size: 1.3rem; margin-bottom: 1.25rem; }

  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.9rem;
  }
  th, td {
    padding: 0.875rem 1.25rem;
    text-align: left;
    border-bottom: 1px solid var(--border);
  }
  th {
    background: var(--bg2);
    font-weight: 700;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--text2);
  }
  td { color: var(--text2); }
  td:first-child { color: var(--text); font-weight: 600; }
  td.highlight { color: var(--accent); font-weight: 600; }
  tr:hover td { background: rgba(255,255,255,0.02); }

  @media (max-width: 900px) {
    .chooser-grid { grid-template-columns: 1fr; }
    table { font-size: 0.8rem; }
    th, td { padding: 0.625rem 0.75rem; }
  }
</style>
