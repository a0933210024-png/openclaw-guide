    align-items: center;
    padding: 0.5rem 0;
  }
  .token-label {
    color: var(--text2);
    font-size: 0.95rem;
  }
  .token-value {
    color: var(--accent2);
    font-weight: 700;
    font-size: 1.1rem;
  }

  /* Model Cards */
  .models-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .model-card {
    background: var(--bg2);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.75rem;
    position: relative;
    transition: all 0.2s;
  }
  .model-card:hover {
    border-color: var(--accent2);
    transform: translateY(-2px);
  }
  .model-card.budget {
    border-color: rgba(0,255,0,0.3);
    background: linear-gradient(135deg, rgba(0,255,0,0.02), var(--bg2));
  }
  .model-card.premium {
    border-color: rgba(0,212,255,0.3);
    background: linear-gradient(135deg, rgba(0,212,255,0.02), var(--bg2));
  }
  .model-card.top {
    border-color: rgba(255,107,53,0.4);
    background: linear-gradient(135deg, rgba(255,107,53,0.05), var(--bg2));
  }

  .model-badge {
    position: absolute;
    top: -0.75rem;
    right: 1.5rem;
    background: var(--accent);
    color: white;
    font-size: 0.7rem;
    font-weight: 700;
    padding: 0.25rem 0.7rem;
    border-radius: 999px;
    text-transform: uppercase;
  }

  .model-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  .model-emoji {
