    gap: 2rem;
    margin: 2rem 0;
  }
  .concept-card {
    background: var(--bg2);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 2rem;
  }
  .concept-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  .concept-card h3 {
    font-size: 1.4rem;
    margin: 0 0 1rem 0;
  }
