<style>
  .page-hero { background: linear-gradient(180deg, rgba(0,212,255,0.08) 0%, transparent 100%); border-bottom: 1px solid var(--border); padding: 4rem 0 3rem; }
  .page-hero .badge { margin-bottom: 1rem; }
  .page-hero h1 { margin-bottom: 1rem; }
  .page-subtitle { font-size: 1.1rem; max-width: 640px; line-height: 1.7; margin-bottom: 1rem; }
  .lang-notice { margin-top: 1rem; }
  .lang-notice a { font-size: 0.9rem; color: var(--accent); font-weight: 600; }

  .page-content { padding: 0 0 5rem; }
  .content-section { padding: 4rem 0; }
  .content-section.alt-bg { background: var(--bg2); }
  .container-inner { max-width: var(--max-width); margin: 0 auto; padding: 0 1.5rem; }

  .section-header { text-align: center; margin-bottom: 3rem; }
  .section-header .badge { margin-bottom: 1rem; }
  .section-header h2 { margin-bottom: 0.75rem; }
  .section-header p { font-size: 1.05rem; max-width: 640px; margin: 0 auto; }

  /* Scenario */
  .scenario-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: start; }
  .telegram-mock { background: #1a1a2e; border: 1px solid #2a2a4a; border-radius: var(--radius-lg); overflow: hidden; }
  .tg-header { background: #16213e; padding: 1rem 1.25rem; display: flex; align-items: center; gap: 0.75rem; border-bottom: 1px solid #2a2a4a; }
  .tg-avatar { font-size: 2rem; }
  .tg-name { font-weight: 700; font-size: 0.95rem; }
  .tg-time { font-size: 0.75rem; color: var(--text2); }
  .tg-messages { padding: 1.25rem; }
  .tg-msg { background: #0f3460; color: #e2e8f0; padding: 1rem 1.25rem; border-radius: var(--radius); font-size: 0.85rem; line-height: 1.8; }
  .urgent { color: #f87171; font-weight: 700; }

  .scenario-text h3 { font-size: 1.2rem; margin-bottom: 1.5rem; }
  .behind-steps { display: flex; flex-direction: column; gap: 1.25rem; }
  .b-step { display: flex; gap: 1rem; align-items: flex-start; }
  .b-icon { font-size: 1.5rem; flex-shrink: 0; margin-top: 0.1rem; }
  .b-step strong { display: block; margin-bottom: 0.25rem; }
  .b-step p { font-size: 0.9rem; line-height: 1.6; margin: 0; }

  /* Features */
  .features-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; }
  .feature { background: var(--bg); border: 1px solid var(--border); border-radius: var(--radius-lg); padding: 1.75rem; }
  .f-icon { font-size: 2rem; margin-bottom: 0.75rem; }
  .feature h3 { margin-bottom: 0.5rem; font-size: 1.05rem; }
  .feature p { font-size: 0.88rem; line-height: 1.7; margin-bottom: 0.75rem; }
  .f-example { font-family: var(--mono); font-size: 0.78rem; color: var(--accent2); background: var(--bg3); padding: 0.5rem 0.75rem; border-radius: var(--radius); border: 1px solid var(--border); font-style: italic; }

  /* Setup Path */
  .setup-path { display: flex; align-items: flex-start; gap: 2rem; margin-bottom: 2rem; }
  .path-option { flex: 1; background: var(--bg2); border: 1px solid var(--border); border-radius: var(--radius-lg); padding: 2rem; }
  .path-num { font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.08em; color: var(--accent); margin-bottom: 0.5rem; }
  .path-option h3 { margin-bottom: 0.75rem; font-size: 1.1rem; }
  .path-option p { font-size: 0.9rem; line-height: 1.7; margin-bottom: 1rem; }
  .path-divider { font-size: 1.1rem; font-weight: 700; color: var(--text2); padding-top: 4rem; }

  .tip-box { background: rgba(255,107,53,0.05); border: 1px solid rgba(255,107,53,0.2); color: var(--text2); padding: 1rem 1.25rem; border-radius: var(--radius); font-size: 0.9rem; line-height: 1.6; }

  .nav-buttons { display: flex; justify-content: space-between; align-items: center; padding: 2rem 1.5rem; border-top: 1px solid var(--border); }

  @media (max-width: 900px) {
    .scenario-grid, .features-grid { grid-template-columns: 1fr; }
    .setup-path { flex-direction: column; }
    .path-divider { padding-top: 0; align-self: center; }
  }
  @media (max-width: 500px) {
    .nav-buttons { flex-direction: column; gap: 1rem; }
  }
</style>
